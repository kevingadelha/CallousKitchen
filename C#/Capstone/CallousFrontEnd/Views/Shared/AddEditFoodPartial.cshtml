@model CallousFrontEnd.Models.FoodKitchen
@using (Html.BeginForm("AddEditFood", "User", FormMethod.Post))

{
    @Html.HiddenFor(x => x.KitchenId)
    @Html.HiddenFor(x => x.Food.Id)



    <div class="form-group">
        @Html.LabelFor(x => x.Food.Name)
        @Html.TextBoxFor(x => x.Food.Name, htmlAttributes: new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.Food.Quantity)
        @Html.TextBoxFor(x => x.Food.Quantity, htmlAttributes: new { @class = "form-control", @type = "number", @step = "1", @min = "1" })
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.Food.ExpiryDate)
        @Html.TextBoxFor(x => x.Food.ExpiryDate, "{0:yyyy-MM-dd}", htmlAttributes: new { @class = "form-control", @type = "date" })
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.Food.Storage, "Storage")
        @Html.DropDownListFor(x=> x.Food.Storage, new SelectList(ViewBag.StorageTypesList, "Id", "Name"), new { htmlAttributes = new { @class = "form-control" } })
    </div>
    @if (Model.Food.Id == 0)
    {
        <button type="submit" class="btn btn-primary">Add Food</button>
    }
    else
    {
        <button type="submit" class="btn btn-primary">Edit Food</button>
    }
}
