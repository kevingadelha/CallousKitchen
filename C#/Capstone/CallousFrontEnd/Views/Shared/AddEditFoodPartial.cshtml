@model CallousFrontEnd.Models.FoodKitchen
@using (Html.BeginForm("AddEditFood", "User", FormMethod.Post))

{
    <div class="form-group">
        @Html.LabelFor(x => x.Food.Name, htmlAttributes: new { @class = "form-control" })
        @Html.TextBoxFor(x => x.Food.Name, htmlAttributes: new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.Food.Quantity, htmlAttributes: new { @class = "form-control" })
        @Html.TextBoxFor(x => x.Food.Quantity, htmlAttributes: new { @class = "form-control", @type = "number" })
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.Food.ExpiryDate, htmlAttributes: new { @class = "form-control"})
        @Html.TextBoxFor(x => x.Food.ExpiryDate, htmlAttributes: new { @class = "form-control", @type = "date" })
    </div>
    @if (Model.Food.Id == 0)
    {
        <button type="submit" class="btn btn-primary">Add Food</button>
    }
    else
    {
        <button type="submit" class="btn btn-primary">Edit Food</button>
    }
}
