<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/bgColor"
    tools:context=".CreateAccountActivity">

    <ImageView
        android:id="@+id/imgHippoCreateAccount"
        android:layout_width="191dp"
        android:layout_height="205dp"
        android:layout_marginTop="80dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/hippo" />

    <ImageView
        android:id="@+id/grayRectCreateAccount"
        android:layout_width="298dp"
        android:layout_height="347dp"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgHippoCreateAccount"
        app:srcCompat="@drawable/gray_rect" />

    <Button
        android:id="@+id/btnConfirmCreateAccount"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:backgroundTint="@color/colorAccent"
        android:text="@string/create_account"
        android:textColor="?attr/textColor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextConfirmPassword" />

    <Button
        android:id="@+id/btnCancelCreateAccount"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:backgroundTint="@color/colorDarkBtn"
        android:text="@string/cancel"
        android:textColor="?attr/textColor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnConfirmCreateAccount" />

    <EditText
        android:id="@+id/editTextUsernameCreate"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:backgroundTint="?attr/textColor"
        android:ems="10"
        android:hint="@string/email"
        android:inputType="textPersonName"
        android:textColor="?attr/textColor"
        android:textColorHint="?attr/metaTextColor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/grayRectCreateAccount" />

    <EditText
        android:id="@+id/editTextCreatePassword"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:backgroundTint="?attr/textColor"
        android:ems="10"
        android:hint="@string/password"
        android:inputType="textPassword"
        android:textColor="?attr/textColor"
        android:textColorHint="?attr/metaTextColor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextUsernameCreate" />

    <EditText
        android:id="@+id/editTextConfirmPassword"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:backgroundTint="?attr/textColor"
        android:ems="10"
        android:hint="confirm password"
        android:inputType="textPassword"
        android:textColor="?attr/textColor"
        android:textColorHint="?attr/metaTextColor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextCreatePassword" />

</androidx.constraintlayout.widget.ConstraintLayout>